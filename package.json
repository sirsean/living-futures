{
  "name": "living-futures",
  "version": "1.0.0",
  "type": "module",
  "description": "Baseball Living Futures - A Dynamic Derivatives Market for Team Performance",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cd dapp && npm run dev",
    "build": "npm run build:contracts && npm run build:dapp",
    "build:contracts": "cd contracts && npm run build",
    "build:dapp": "cd dapp && npm run build",
    "test": "npm run test:contracts && npm run test:scripts",
    "test:contracts": "cd contracts && npm run test",
    "test:scripts": "cd scripts && npm run test",
    "lint": "npm run lint:contracts && npm run lint:dapp",
    "lint:contracts": "cd contracts && npm run lint",
    "lint:dapp": "cd dapp && npm run lint",
    "typecheck": "npm run typecheck:scripts && npm run typecheck:dapp",
    "typecheck:scripts": "tsc --noEmit -p scripts/tsconfig.json",
    "typecheck:dapp": "cd dapp && npm run typecheck",
    "sync-github-secrets": "cd scripts && npm run sync-github-secrets",
    "oracle:sync": "cd scripts && npm run oracle:sync --"
  },
  "workspaces": {
    "packages": [
      "contracts",
      "dapp",
      "scripts"
    ],
    "nohoist": [
      "**/vite",
      "**/vite/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirsean/living-futures.git"
  },
  "keywords": [
    "blockchain",
    "defi",
    "derivatives",
    "sports",
    "base"
  ],
  "author": "Living Futures",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sirsean/living-futures/issues"
  },
  "homepage": "https://github.com/sirsean/living-futures#readme"
}
