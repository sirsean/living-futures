# Environment configuration template for Living Futures
# Copy this file to .env and fill in the values

# Blockchain Network Configuration
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Private key for deployments (Never commit!)
PRIVATE_KEY=your_private_key_here

# Block Explorer API Keys
BASESCAN_API_KEY=your_basescan_api_key

# Cloudflare Configuration (only needed for custom workflows)
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
# CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Oracle Configuration (for sports data)
ORACLE_API_KEY=your_oracle_api_key
ORACLE_API_URL=https://api.sportsdataprovider.com

# Database Configuration (Cloudflare D1)
DATABASE_ID=your_d1_database_id

# Contract Addresses (filled after deployment)
PROXY_ADMIN_ADDRESS=
TEAM_VIRTUAL_AMM_ADDRESS=
POSITION_MANAGER_ADDRESS=
LIQUIDITY_MANAGER_ADDRESS=
INSURANCE_FUND_ADDRESS=
SHARED_LIQUIDITY_POOL_ADDRESS=
ORACLE_COORDINATOR_ADDRESS=

# Frontend Configuration
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
VITE_ALCHEMY_API_KEY=your_alchemy_api_key

# Discord Notifications (optional)
DISCORD_CHANNEL_ID=discord_channel_id
DISCORD_APP_TOKEN=discord_app_token

# Node Environment
NODE_ENV=development

# Chain IDs
CHAIN_ID=8453  # Base mainnet
TESTNET_CHAIN_ID=84532  # Base Sepolia

# Gas Configuration
MAX_GAS_PRICE_GWEI=50
MAX_PRIORITY_FEE_GWEI=2

# Security
JWT_SECRET=your_jwt_secret_here
ADMIN_ADDRESSES=comma_separated_admin_addresses
